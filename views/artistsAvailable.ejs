<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Artists Available</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  
  <link href="/css/available.css" rel="stylesheet">
</head>
<body>
  <%- include("partials/nav.ejs") %>
  <%- include("partials/search.ejs") %>

  <div class="container">
    <h1 class="text-center mb-4">Artists Available</h1>
    <div class="row">
      <% for (let i = 0; i < rows.length; i++) { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <% if (rows[i].image) { %>
              <img src="<%= rows[i].image %>" alt="<%= rows[i].name %>" class="card-img-top">
            <% } else { %>
              <div class="card-img-top text-center text-muted" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                No Image Available
              </div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= rows[i].name %></h5>
              <button type="button" 
              class="btn btn-primary open-modal-btn" 
              data-toggle="modal" 
              data-target="#rankingModal"
              data-name="<%= rows[i].name %>" 
              data-image="<%= rows[i].image %>">
              Rank Artist
            </button>
            </div>
          </div>
        </div>
      <% } %>
      <%- include("partials/rankModal.ejs") %>
    </div>
  </div>
</body>
<script src="/js/rankingModal.js"></script>
<script src="/js/infoModal.js"></script>
</html>